<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/appearance">

        <net.gsantner.opoc.preference.LanguagePreferenceCompat
            android:icon="@drawable/ic_language_black_24dp"
            android:key="@string/pref_key__language"
            android:summary="@string/pref_desc__language"
            android:title="@string/pref_title__language" />

        <net.gsantner.opoc.preference.FontPreferenceCompat
            android:defaultValue="@string/default_font_family"
            android:icon="@drawable/ic_format_shapes_black_24dp"
            android:key="@string/pref_key__editing_font"
            android:title="@string/editing_font" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/user_accounts">

        <Preference
            android:icon="@drawable/ic_github_black_24dp"
            android:key="@string/pref_key__github_authentication_request"
            android:summary="@string/github_not_logged_long"
            android:title="@string/login_to_github" />
    </PreferenceCategory>

</PreferenceScreen>